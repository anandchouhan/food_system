<% if current_owner.users.present? %>
  <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>     </th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index| %>
        <% if index.even? %>
          <tr class="success">
        <% else %>
          <tr class="info">
        <% end %>  
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%=  %></td>
            <td><%= link_to 'User pro', user_path(user), :class => "btn btn-warning btn-xs"  %>
              <%= link_to 'Create entry',  new_user_entry_path(user), :class => "btn btn-info btn-xs" if !user.entry.present?  %> 
              <%= link_to 'Show',   user_entry_path(user, user.entry), :class => "btn btn-info btn-xs"  if user.entry.present? %>
            </td>
          </tr>
      <% end %>  
    </tbody>
  </table>
<% else %> 
<center><b> No user found </b></center>
<% end %>   